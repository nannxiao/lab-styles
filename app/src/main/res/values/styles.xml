<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "TextStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textSize">22sp</item>
        <item name = "android:textColor">@color/colorUWGold</item>
    </style>

    <style name="Label" parent="TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Gold" parent="Label">
        <item name="android:background">@color/colorUWGold</item>
        <item name = "android:textColor">#000000</item>
    </style>

    <style name="Button" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>


</resources>
